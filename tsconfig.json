{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-native",
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components"],
      "@hooks": ["src/hooks"],
      "@routes": ["src/routes"],
      "@screens": ["src/screens"],
      "@theme": ["src/theme"]
    },
    "exclude": ["node_modules"]
  }
}
